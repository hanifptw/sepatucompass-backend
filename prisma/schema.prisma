generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shoes {
  id           Int        @id @default(autoincrement())
  name         String
  imageURL     String     @db.VarChar(255)
  price        Int?
  size         String[]
  description  String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt @default(now())
  orderId      OrderShoes @relation(fields: [orderShoesId], references: [id])
  orderShoesId Int
}

model OrderShoes {
  id       Int      @id @default(autoincrement())
  quantity Int?

  Shoes    Shoes[]
  Orders   Orders[]
}

model Orders {
  id           Int        @id
  status       String?
  createdAt    DateTime @default(now())

  orderId      OrderShoes @relation(fields: [orderShoesId], references: [id])
  orderShoesId Int
}
